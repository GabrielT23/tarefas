// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Tarefa {
  id        String      @id @default(uuid())
  titulo    String
  descricao String?
  dataCriacao DateTime @default(now())
  status    String   // VocÃª pode escolher usar um tipo enum se preferir um conjunto limitado de valores para o status.
}